#!/usr/bin/env python2
# -*- mode: python -*-

import sys
import os

handlers = {}
for submodule in '''
 phenolist
 get_cpras
 merge_cpras
 download_rsids
 download_genes
 add_rsids
 make_tries
 standardize_phenos
 make_manhattan
 make_qq
 make_matrix
 bgzip_phenos
 top_loci
 process_assoc_files
 make_wsgi
'''.split():
    def f(submodule):
        def f(argv):
            # TODO: this is awful, how do I make it stop?  Maybe importlib (in py3) will help?
            exec('from pheweb.load import {}'.format(submodule)) in globals(), locals()
            exec('module = {}'.format(submodule)) in globals(), locals()
            module.run(argv)
        return f
    handlers[submodule.replace('_', '-')] = f(submodule)

def serve_run(argv):
    from pheweb.serve import server
    server.run(argv)
handlers['serve'] = serve_run


def help():
    from pheweb import version
    print('''\
PheWeb {}

To see more information about a subcommand, run that command followed by `-h`.

Subcommands:

    pheweb phenolist
        prepare a list of phenotypes

    pheweb process-assoc-files
        once a phenolist has been prepared, load all data to be ready to run the server.

    pheweb serve
        host a webserver
'''.format(version.version))

subcommand = sys.argv[1] if len(sys.argv)>1 else ''
if subcommand in ['', '-h', '--help']:
    help()
elif subcommand not in handlers:
    print('Unknown subcommand {!r}'.format(subcommand))
    help()
else:
    handlers[subcommand](sys.argv[2:])
